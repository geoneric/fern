<?xml version="1.0"?>
<xs:schema
  xmlns:xs="http://www.w3.org/2001/XMLSchema"
  xmlns:geoneric="http://www.geoneric.eu"
  targetNamespace="http://www.geoneric.eu"
>

<!--
  elementFormDefault="qualified"
-->

  <xs:complexType
    name="Geoneric">
    <xs:sequence>
      <xs:element
        name="Statements"
        type="geoneric:Statements"/>
    </xs:sequence>
    <xs:attribute name="source" type="xs:string" use="required"/>
  </xs:complexType>

  <xs:complexType
    name="Statements">
    <xs:sequence
      minOccurs="0"
      maxOccurs="unbounded">
      <xs:element
        name="Statement"
        type="geoneric:Statement"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType
    name="Statement">
    <xs:choice>
      <xs:element
        name="Expression"
        type="geoneric:Expression"/>
      <xs:element
        name="Assignment"
        type="geoneric:Assignment"/>
      <xs:element
        name="If"
        type="geoneric:If"/>
      <xs:element
        name="While"
        type="geoneric:While"/>
      <xs:element
        name="FunctionDefinition"
        type="geoneric:FunctionDefinition"/>
      <xs:element
        name="Return"
        type="geoneric:Return"/>
    </xs:choice>
    <xs:attribute name="line" type="xs:nonNegativeInteger" use="required"/>
    <xs:attribute name="col" type="xs:nonNegativeInteger" use="required"/>
  </xs:complexType>

  <xs:complexType name="If">
    <xs:sequence>
      <!-- Condition. -->
      <xs:element
        name="Expression"
        type="geoneric:Expression"/>
      <!-- True block. -->
      <xs:element
        name="Statements"
        type="geoneric:Statements"/>
      <!-- False block. -->
      <xs:element
        name="Statements"
        type="geoneric:Statements"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="While">
    <xs:sequence>
      <!-- Condition. -->
      <xs:element
        name="Expression"
        type="geoneric:Expression"/>
      <!-- True block. -->
      <xs:element
        name="Statements"
        type="geoneric:Statements"/>
      <!-- False block. -->
      <xs:element
        name="Statements"
        type="geoneric:Statements"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="FunctionDefinition">
    <xs:sequence>
      <xs:element
        name="Name"
        type="xs:string"/>
      <!-- Arguments. -->
      <xs:element
        name="Expressions"
        type="geoneric:Expressions"/>
      <!-- Body. -->
      <xs:element
        name="Statements"
        type="geoneric:Statements"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="Return">
    <xs:sequence
      minOccurs="0">
      <xs:element
        name="Expression"
        type="geoneric:Expression"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="Assignment">
    <xs:sequence>
      <xs:element
        name="Expression"
        type="geoneric:Expression"/>
      <xs:element
        name="Expression"
        type="geoneric:Expression"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="Expressions">
    <xs:sequence
      minOccurs="0"
      maxOccurs="unbounded">
      <xs:element
        name="Expression"
        type="geoneric:Expression"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="Expression">
    <xs:choice>
      <xs:element
        name="Name"
        type="xs:string"/>
      <xs:element
        name="Subscript"
        type="geoneric:Subscript"/>
      <xs:element
        name="String"
        type="xs:string"/>
      <xs:element
        name="Number"
        type="geoneric:Number"/>
      <xs:element
        name="FunctionCall"
        type="geoneric:FunctionCall"/>
      <xs:element
        name="Operator"
        type="geoneric:Operator"/>
    </xs:choice>
    <xs:attribute name="line" type="xs:nonNegativeInteger" use="required"/>
    <xs:attribute name="col" type="xs:nonNegativeInteger" use="required"/>
  </xs:complexType>

  <xs:complexType name="Subscript">
    <xs:sequence>
      <xs:element
        name="Expression"
        type="geoneric:Expression"/>
      <xs:element
        name="Expression"
        type="geoneric:Expression"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="Number">
    <xs:choice>
      <xs:element
        name="Integer"
        type="geoneric:Integer"/>
      <xs:element
        name="UnsignedInteger"
        type="geoneric:UnsignedInteger"/>
      <xs:element
        name="Float"
        type="geoneric:Float"/>
    </xs:choice>
  </xs:complexType>

  <xs:complexType name="Integer">
    <xs:sequence>
      <xs:element
        name="Size"
        type="xs:positiveInteger"/>
      <xs:element
        name="Value"
        type="xs:int"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="UnsignedInteger">
    <xs:sequence>
      <xs:element
        name="Size"
        type="xs:positiveInteger"/>
      <xs:element
        name="Value"
        type="xs:nonNegativeInteger"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="Float">
    <xs:sequence>
      <xs:element
        name="Size"
        type="xs:positiveInteger"/>
      <xs:element
        name="Value"
        type="xs:double"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="FunctionCall">
    <xs:sequence>
      <xs:element
        name="Name"
        type="xs:string"/>
      <xs:element
        name="Expressions"
        type="geoneric:Expressions"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="Operator">
    <xs:sequence>
      <xs:element
        name="Name"
        type="xs:string"/>
      <xs:element
        name="Expressions"
        type="geoneric:Expressions"/>
    </xs:sequence>
  </xs:complexType>
</xs:schema>
